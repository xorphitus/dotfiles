Config {
       -- appearance
         font = "xft:Migu1c:size=10:bold"
       , bgColor = "black"
       , fgColor = "grey"
       , border = NoBorder
       , borderColor = "#646464"
       , alpha   = 235
       , position = TopW L 92
       -- layout
       , commands = [ Run Weather "RJAA"
                          ["-t"      , "☀☁☂ <skyCondition> <tempC>℃ (at <hour>)"
                          ,"-L"      , "64"
                          ,"-H"      , "77"
                          ,"--normal", "green"
                          ,"--high"  , "red"
                          ,"--low"   , "lightblue"
                          ] 36000
                    , Run Network "enp0s25"
                          ["-t"      , "<dev>: ⇩<rx> ⇧<tx>kB/s"
                          ,"-L"      , "0"
                          ,"-H"      , "32"
                          ,"--normal", "green"
                          ,"--high"  , "red"
                          ] 10
                    , Run MultiCpu
                          ["-t"       , "CPU: <total0>,<total1>,<total2>,<total3>%"
                          ,"-L"       , "3"
                          ,"-H"       , "50"
                          ,"--normal" , "green"
                          ,"--high"   , "red"
                          ] 10
                    , Run Memory
                          ["-t", "Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run DiskU
                          [("/", "Disk: <usedvbar>")] [] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ [%multicpu%] [%memory% %swap%] [%disku%] [%enp0s25%] <fc=#ee9a00>[%date%]</fc> %RJAA%"
       -- general behavior
       , lowerOnStart =     True    -- send to bottom of window stack on start
       , hideOnStart =      False   -- start with window unmapped (hidden)
       , allDesktops =      True    -- show on all desktops
       , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
       , pickBroadest =     False   -- choose widest display (multi-monitor)
       , persistent =       True    -- enable/disable hiding (True = disabled)
       }
