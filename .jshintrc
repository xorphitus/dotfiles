// http://www.jshint.com/docs/options/
{
    // style
    "camelcase" : true,
    "curly" : true,
    "eqeqeq" : true, // === !==
    "forin" : true, // require 'hasOwnProperty' within for-in loop
    "newcap" : true, // ok: new Hoge / ng: new hoge
    "noarg" : true, // forbid arguments.caller, arguments.callee
    "undef" : true,
    "unused" : true,
    "maxparams" : 4,
    "maxdepth" : 2,
    "maxstatements" : 30,
    "maxcomplexity" : 20,
    "maxlen" : 80,
    // environments
    "browser" : true,
    "devel" : true, // allow 'console', 'alert', etc
    "jquery" : true,
    "node" : true,
    "globals": {
        "_": false,
        "Backbone": false
    }
}
